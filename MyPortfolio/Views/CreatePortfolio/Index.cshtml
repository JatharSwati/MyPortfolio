@model MyPortfolio.ViewModels.CreatePortfolioViewModel
@{
    ViewBag.Title = "Create Portfolio";
}

<div class="container mt-4 mb-5">

    <h2 class="text-center mb-3">Create Your Portfolio</h2>

    <h5 class="text-center mb-4">Complete The Steps Below To Create Your Portfolio</h5>

    <table class="table table-bordered table-striped text-center">

        <thead style="font-size:1.1em;">
            <tr>
                <th style="width:50%">Steps</th>
                <th style="width:25%">Status</th>
                <th style="width:25%">Action</th>
            </tr>
        </thead>

        <tbody>

            <tr>
                <td class="text-left">Basic Details</td>
                <td>
                    @if (Model.BasicInfoId == Guid.Empty)
                    {
                        <span class="badge bg-danger" style="font-size:0.75em; padding:0.5em; color:white;">Incompleted</span>    
                    }
                    else
                    {
                        <span class="badge bg-success" style="font-size: 0.75em; padding: 0.5em; color: white;">Completed</span>
                    }                                       
                </td>
                <td>
                    @if (Model.BasicInfoId == Guid.Empty)
                    {
                        @Html.ActionLink("Add", "SaveBasicInfo", "MyBasicInfo", null, new { @class = "btn btn-primary" })
                    }
                    else
                    {
                        @Html.ActionLink("Edit", "SaveBasicInfo", "MyBasicInfo", new { basicInfoId = Model.BasicInfoId }, new { @class = "btn btn-warning" })
                    }
                </td>
            </tr>
            
        </tbody>

    </table>
</div>

