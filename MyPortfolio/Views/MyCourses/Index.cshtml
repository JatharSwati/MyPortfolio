@model List<MyPortfolio.Models.Courses>

@{
    ViewBag.Title = "Courses List";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-primary border-bottom pb-3">Courses List</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">

            @foreach (var courses in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">

                    <div class="card shadow-sm w-100">

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">@courses.CourseName</h5>

                            <h6 class="card-subtitle mb-2 text-muted">@courses.CoursePlatfrom</h6>

                            <p class="card-text">

                                <strong>Start Date:</strong> @courses.StartDate.Value.ToString("dd MMMM yyyy")<br />

                                @if (courses.EndDate.HasValue)
                                {
                                    <strong>End Date:</strong> @courses.EndDate.Value.ToString("dd MMMM yyyy") <br />
                                }

                                @if (!string.IsNullOrEmpty(courses.Description))
                                {
                                    <strong>Description:</strong> @courses.Description <br />
                                }

                                @if (!string.IsNullOrEmpty(courses.Skills))
                                {
                                    <strong>Skills:</strong> @courses.Skills <br />
                                }

                            </p>

                            <div class="mt-auto d-flex justify-content-between">
                                @Html.ActionLink("Edit", "SaveCourses", "MyCourses", new { coursesId = courses.CoursesId }, new { @class = "btn btn-success btn-sm" })
                                @Html.ActionLink("Delete", "DeleteCourses", "MyCourses", new { coursesId = courses.CoursesId }, new { @class = "btn btn-danger btn-sm" })
                            </div>

                        </div>

                    </div>

                </div>
            }

        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No courses records found. Add your courses by clicking the "Add New Courses" button.
        </div>
    }

    <div class="text-center">
        @Html.ActionLink("Add New Courses", "SaveCourses", "MyCourses", null, new { @class = "btn btn-primary" })
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("Back", "Index", "CreatePortfolio", null, new { @class = "btn btn-secondary" })
    </div>

</div>


