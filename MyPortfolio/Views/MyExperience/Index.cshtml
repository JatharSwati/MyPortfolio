@model List<MyPortfolio.Models.Experience>

@{
    ViewBag.Title = "Experience List";
}

<div class="container mt-5">

    <div class="text-center mb-4">
        <h2 class="display-5 font-weight-bold text-primary border-bottom pb-3">Experience List</h2>
    </div>

    @if (Model.Count() > 0)
    {
        <div class="row">

            @foreach (var experience in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">

                    <div class="card shadow-sm w-100">

                        <div class="card-body d-flex flex-column">

                            <h5 class="card-title">@experience.Designation</h5>

                            <h6 class="card-subtitle mb-2 text-muted">@experience.OrganizationName</h6>

                            <p class="card-text">

                                @if (experience.JoiningDate.HasValue)
                                {
                                    <strong>Joining Date:</strong> @experience.JoiningDate.Value.ToString("dd MMMM yyyy")<br />
                                }

                                @if (experience.EndDate.HasValue)
                                {
                                    <strong>End Date:</strong> @experience.EndDate.Value.ToString("dd MMMM yyyy") <br />
                                }

                                <strong>Description:</strong> @experience.Description <br />

                                @if (!string.IsNullOrEmpty(experience.Skills))
                                {
                                    <strong>Skills:</strong> @experience.Skills
                                }

                                <span class="badge bg-secondary" style="color: white;">@experience.ExperienceType</span>

                            </p>

                            <div class="mt-auto d-flex justify-content-between">
                                @Html.ActionLink("Edit", "SaveExperience", "MyExperience", new { experienceId = experience.ExperienceId }, new { @class = "btn btn-success btn-sm" })
                                @Html.ActionLink("Delete", "DeleteExperience", "MyExperience", new { experienceId = experience.ExperienceId }, new { @class = "btn btn-danger btn-sm" })
                            </div>

                        </div>

                    </div>

                </div>
            }

        </div>
    }
    else
    {
<div class="alert alert-info text-center">
    No experience records found. Add your experience by clicking the "Add New Experience" button.
</div>
    }

    <div class="text-center">
        @Html.ActionLink("Add New Experience", "SaveExperience", "MyExperience", null, new { @class = "btn btn-primary" })
    </div>

    <div class="text-center mt-3">
        @Html.ActionLink("Back", "Index", "CreatePortfolio", null, new { @class = "btn btn-secondary" })
    </div>

</div>


